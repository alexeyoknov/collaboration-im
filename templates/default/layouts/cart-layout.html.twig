    <div class="table-responsive mb-20">
      {{ form_start(form) }}
      <input id="formAction" type="hidden" name="name">
      <div class="card">
        <table class="shop_table-2 cart table">
          <thead>
            <tr>
              <th class="product-thumbnail ">Image</th>
              <th class="product-name ">Product Name</th>
              <th class="product-price ">Unit Price</th>
              <th class="product-quantity">Quantity</th>
              <th class="product-subtotal ">Total</th>
              <th class="product-remove">Remove</th>
            </tr>
          </thead>
          <tbody>
            {{ include('default/layouts/parts/cart-item.html.twig') }}
          </tbody>
        </table>
      </div>
      <div class="cart-bottom-area">
        <div class="row">
          <div class="col-md-8 col-sm-7 col-xs-12">
            <div class="update-coupne-area">
              <div class="update-continue-btn text-right pb-20">
                <a id="cart_save" href="#" class="btn-def btn2">Update Cart</a>
                <a id="cart_clear" href="#" class="btn-def btn2">Clear Cart</a>
                <a href="#" class="btn-def btn2">Continue Shopping</a>
              </div>
