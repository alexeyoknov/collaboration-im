<ul>
    {% for category in categories %}
        <li>
            <a href={{ path('category', {id:category.id}) }}>{{ category.name }} [{{category.products|length}}]</a>
            {{ render(controller(
                'App\\Controller\\DefaultController::getCategories',
                {
                  'view': 'default/layouts/parts/leftsidebar.html.twig',
                  'parent':category.id
                }))
            }}            
        </li>
    {% endfor %}
</ul> 