<div class="portfolio-thumbnil-area">
    <div class="product-more-views">
        <div class="tab_thumbnail" data-tabs="tabs">
            <div class="thumbnail-carousel">
                <ul>
                  {% if product.gallery %}
                    {% for ind, im in product.gallery.getGalleryHasMedias()  %}
                      <li {% if ind == 0 %}class="active" {% endif %}>
                          <a href="#view{{ ind }}" class="shadow-box" aria-controls="view{{ ind }}" data-toggle="tab">
                            <img src="{{ sonata_path(im, 'small') }}" alt="" />
                          </a>
                      </li>
                    {% endfor %}
                  {% else %}
                    <a href="#view" class="shadow-box" aria-controls="view" data-toggle="tab">
                      <img src="https://fakeimg.pl/80/?text=no%20image" alt="" />
                    </a>
                  {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <div class="tab-content active-portfolio-area pos-rltv">
      <div class="social-tag">
        <a href="#"><i class="zmdi zmdi-share"></i></a>
      </div>
      {% if product.gallery %}
        {% for ind, im in product.gallery.getGalleryHasMedias() %}
          <div role="tabpanel" class="tab-pane active" id="view{{ ind }}">
            <div class="product-img">
              <a class="fancybox" data-fancybox-group="group" href="{{ sonata_path(im, 'big') }}"><img src="{{ sonata_path(im, 'big') }}" alt="Single portfolio" /></a>
            </div>
          </div>
         {% endfor %}
        {% else %}
          <div role="tabpanel" class="tab-pane active" id="view">
            <div class="product-img">
              <a class="fancybox" data-fancybox-group="group" href=""><img src="https://fakeimg.pl/400/?text=no%20image" alt="Single portfolio" /></a>
            </div>
          </div>
        {% endif %}
        
    </div>
</div>